<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DangKyPhieuMuonActivity"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="175dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="LẬP PHIẾU MƯỢN SÁCH"
            android:textColor="@color/design_default_color_error"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/edtMaPM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"
            android:text="Mã phiếu mượn:"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="58dp"
            android:text="Họ tên:"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/edtTruongPM"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:text="Trường:"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/LopPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="294dp"
            android:text="Lớp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Ngaylapphieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            android:text="Ngày lập phiếu:"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtSodienthoai" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="38dp"
            android:text="Số điện thoại"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtDiaChi" />

        <EditText
            android:id="@+id/edtMaPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <EditText
            android:id="@+id/edtTruongPM"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/edtHotenPM"
            app:layout_constraintTop_toBottomOf="@+id/edtHotenPM" />

        <EditText
            android:id="@+id/edtLop"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginTop="116dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/edtHotenPM"
            app:layout_constraintTop_toBottomOf="@+id/edtHotenPM" />

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginTop="196dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/edtHotenPM"
            app:layout_constraintTop_toBottomOf="@+id/edtHotenPM" />

        <EditText
            android:id="@+id/edtHotenPM"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="118dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/edtMaPM"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/DkPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/holo_orange_dark"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnHuy"
            app:layout_constraintEnd_toStartOf="@+id/btnHuy"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:text="Hủy"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/holo_orange_dark"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DkPM"
            app:layout_constraintTop_toBottomOf="@+id/edtNgayLapPhieu" />


        <EditText
            android:id="@+id/edtSodienthoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/Diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:text="Địa chỉ:"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtDiaChi" />

        <EditText
            android:id="@+id/edtNgayLapPhieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@+id/Ngaylapphieu"
            app:layout_constraintTop_toTopOf="@+id/Ngaylapphieu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
